<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <CustomLevels>
        <CustomLevel name="LEXER" intLevel="350" />
        <CustomLevel name="PARSER" intLevel="375" />
    </CustomLevels>
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5level - %msg%n%throwable"/>
        </Console>
        <File name="FileAppender" fileName="logs/portuguesh.log">
            <PatternLayout pattern="%-7level - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="TRACE">
            <AppenderRef ref="FileAppender"/>
        </Root>
    </Loggers>
</Configuration>